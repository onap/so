		</dependency>
		<dependency>
			<groupId>org.openecomp.so</groupId>
			<artifactId>MSOCommonBPMN</artifactId>
			<version>${project.version}</version>
	    </dependency>
		<dependency>
			<groupId>org.openecomp.so</groupId>
			<artifactId>MSOCommonBPMN</artifactId>
			<version>${project.version}</version>
