    <ccsdk.version>0.4.2</ccsdk.version>
    <appc.client.version>1.7.1-SNAPSHOT</appc.client.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.apache.httpcomponents</groupId>
